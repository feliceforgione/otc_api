      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "default": "John"
          },
          "lastName": {
            "type": "string",
            "default": "Doe"
          },
          "address": {
            "type": "string",
            "default": "123 Main St."
          },
          "city": {
            "type": "string",
            "default": "New York"
          },
          "state": {
            "type": "string",
            "default": "NY"
          },
