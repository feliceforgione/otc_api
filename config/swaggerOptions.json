            "default": "email@email.com"
          },
          "password": {
            "type": "string",
            "default": "qwerty"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "brand": {
            "type": "string",
            "example": "Tylenol"
          },
          "manufacturer": {
            "type": "string",
            "example": "Johnson & Johnson"
          },
          "title": {
            "type": "string",
            "example": "Tylenol Extra Strength Acetaminophen Rapid Release Gels, 100 ct"
          },
          "upc": {
            "type": "string",
            "example": "300450488282"
          },
          "description": {
            "type": "string",
            "example": "Tylenol Extra Strength Rapid Release Gels work at the speed of life to temporarily relieve minor aches and pains, such as headaches, and reduce fever."
          },
          "description_html": {
            "type": "string",
            "example": "<p>Tylenol Extra Strength Rapid Release Gels work at the speed of life to temporarily relieve minor aches and pains, such as headaches, and reduce fever. </p>"
          },
          "description_full_html": {
            "type": "string",
            "example": "Tylenol Extra Strength Rapid Release Gels work at the speed of life to temporarily relieve minor aches and pains, such as headaches, and reduce fever. Each gelcap features unique laser-drilled holes and releases pain medicine fast. Each gelcap contains 500 mg of acetaminophen for effective, extra strength pain relief."
          },
          "ratings_total": {
            "type": "number",
            "example": 4569
          },
          "ratings": {
            "type": "number",
            "example": 4.7
          },
          "dimensions": {
            "type": "string",
            "example": "3.75 x 1.56 x 3.12 Inches"
          },
          "price": {
            "type": "number",
            "example": 19.82
          },
          "in_stock": {
            "type": "boolean",
            "example": true
          },
          "images": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Image"
            }
          }
        }
      },
      "Image": {
        "type": "object",
        "properties": {
          "link": {
            "type": "string",
            "example": "https://plus.unsplash.com/premium_photo-1668446396629-43f49cc4f98c"
          },
          "id": {
            "type": "string",
            "example": "123456"
          },
          "zoomable": {
            "type": "boolean",
            "example": false
          },
          "main_image": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
