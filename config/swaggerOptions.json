                      "type": "string",
                      "example": "Successful Registration"
                    },
                    "user": {
                      "allOf": [
                        { "$ref": "#/components/schemas/User" },
                        {
                          "type": "object",
                          "properties": {
                            "_id": {
                              "type": "string",
                              "format": "hexadecimal",
                              "example": "6431144859a92e6e125ee4c3"
